<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csit228f2_2.LogInController">
    <GridPane alignment="CENTER" hgap="10" style="-fx-padding: 20;" vgap="10">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="loginUsernameField" style="-fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-background-color: #fff;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="loginPasswordField" style="-fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #ccc; -fx-background-color: #fff;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="26.0" prefWidth="90.0" style="-fx-font-size: 12px; -fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #337ab7; -fx-background-color: #337ab7; -fx-text-fill: #fff; -fx-cursor: hand;" text="Log In">
            <effect>
                <DropShadow color="#337ab7" offsetX="2" offsetY="2" radius="5" />
            </effect>
        </Button>
        <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="26.0" prefWidth="90.0" style="-fx-font-size: 12px; -fx-padding: 10; -fx-border-radius: 5; -fx-border-color: #337ab7; -fx-background-color: #337ab7; -fx-text-fill: #fff; -fx-cursor: hand;" text="Register">
            <effect>
                <DropShadow color="#337ab7" offsetX="2" offsetY="2" radius="5" />
            </effect>
        </Button>
    </HBox>
</VBox>
